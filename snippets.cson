'.source.css':
  'c1':
    'prefix': 'c1'
    'body': """/*=====================================================================
      $1
    =====================================================================*/"""
  'c2':
    'prefix': 'c2'
    'body': """/*---------------------------------------------------------------------
      $1
    ---------------------------------------------------------------------*/"""
  'c3':
    'prefix': 'c3'
    'body': """/*
      $1
    ---------------------------------------------------------------------*/"""
  'c4':
    'prefix': 'c4'
    'body': """/* $1
    ---------------------------------------------------------------------*/"""
  'm4':
    'prefix': 'm4'
    'body': """@media (width >= 480px) {
      $1
    }"""
  'm7':
    'prefix': 'm7'
    'body': """@media (width >= 768px) {
      $1
    }"""
  'm9':
    'prefix': 'm9'
    'body': """@media (width >= 960px) {
      $1
    }"""
  'm1':
    'prefix': 'm1'
    'body': """@media (width >= 1280px) {
      $1
    }"""

